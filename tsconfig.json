{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}

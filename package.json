{
  "name": "ferbes-layout",
  "version": "0.0.10",
  "description": "Layout Components for React Applications",
  "author": "Gerion Herbst<gerion@gmx.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mortzmortz/ferbes-layout.git"
  },
  "keywords": [
    "react",
    "design system",
    "styled system",
    "emotion",
    "storybook"
  ],
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "start": "start-storybook -s .storybook/public -p 9000",
    "build": "cross-env NODE_ENV=production rollup -c",
    "storybook:build": "build-storybook -o ./docs -s .storybook/public --docs",
    "prepack": "yarn clean && yarn build && yarn test",
    "test": "jest src --coverage --colors --passWithNoTests",
    "test:watch": "jest src --watch",
    "release": "standard-version",
    "analyze": "npx source-map-explorer 'dist/esm/*.js'",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "@styled-system/should-forward-prop": "5.1.5",
    "@types/prop-types": "15.7.4",
    "@types/react": "17.0.38",
    "@types/resize-observer-browser": "0.1.6",
    "@types/styled-system": "5.1.15",
    "@types/styled-system__should-forward-prop": "5.1.2",
    "react-keyed-flatten-children": "1.3.0",
    "styled-system": "5.1.5"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "7.16.7",
    "@babel/plugin-transform-runtime": "7.16.10",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@emotion/babel-preset-css-prop": "11.2.0",
    "@emotion/eslint-plugin": "11.7.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@storybook/addon-docs": "6.4.14",
    "@storybook/addon-links": "6.4.14",
    "@storybook/react": "6.4.14",
    "@storybook/theming": "6.4.14",
    "@styled-system/theme-get": "5.1.2",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react-hooks": "7.0.2",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.3",
    "cross-env": "7.0.3",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.7",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "2.65.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-typescript2": "0.31.1",
    "standard-version": "9.3.2",
    "typescript": "4.5.5"
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "docs",
      "dist"
    ],
    "collectCoverageFrom": [
      "src/**.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.tests.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app",
      "prettier"
    ],
    "plugins": [
      "@emotion",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5",
          "arrowParens": "avoid",
          "bracketSpacing": true
        }
      ],
      "@emotion/no-vanilla": "error",
      "@emotion/import-from-emotion": "error",
      "@emotion/styled-import": "error",
      "@emotion/pkg-renaming": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "/dist",
    "/docs",
    "!/.storybook"
  ]
}

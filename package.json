{
  "name": "ferbes-layout",
  "version": "1.0.0",
  "description": "Layout Components for React Applications",
  "author": "Gerion Herbst<gerion@gmx.com>",
  "homepage": "https://ferbes-layout.netlify.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mortzmortz/ferbes-layout.git"
  },
  "keywords": [
    "react",
    "design system",
    "stitches",
    "storybook"
  ],
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development start-storybook -p 9000 --docs",
    "storybook:build": "build-storybook -o ./docs --docs",
    "build": "cross-env NODE_ENV=production rollup -c",
    "release": "standard-version",
    "prepack": "yarn clean && yarn build && yarn test:ci",
    "test:ci": "vitest run --passWithNoTests",
    "test": "vitest --passWithNoTests",
    "coverage": "vitest run --coverage",
    "analyze": "npx source-map-explorer 'dist/esm/*.js'",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "clean-install": "rm -rf node_modules/ && yarn cache clean && yarn install --pure-lockfile"
  },
  "dependencies": {
    "@stitches/react": "^1.2.8",
    "react-keyed-flatten-children": "^1.3.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/preset-env": "7.19.0",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-docs": "6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "6.5.10",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "@vitejs/plugin-react": "^2.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.7.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "2.79.0",
    "rollup-plugin-typescript2": "0.33.0",
    "standard-version": "9.5.0",
    "typescript": "4.7.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5",
          "arrowParens": "avoid",
          "bracketSpacing": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "/dist",
    "/docs",
    "!/.storybook"
  ]
}
